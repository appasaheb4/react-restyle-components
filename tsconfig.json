{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "outDir": "./lib",
    "rootDir": "./",
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "jsx": "react-jsx",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "sourceMap": false,
   "types": [ "jest", "node"],
  },
  "include": ["index.ts", "src/**/*"],
  "exclude": [
    "__mocks__",
    "**/__tests__/*",
    "**/__helpers__/*",
    "node_modules",
    "babel.config.js",
    "jest.config.js",
    "jest.setup.js",
    ".eslintrc.js",
    "**/*.stories.tsx"
  ]
}
